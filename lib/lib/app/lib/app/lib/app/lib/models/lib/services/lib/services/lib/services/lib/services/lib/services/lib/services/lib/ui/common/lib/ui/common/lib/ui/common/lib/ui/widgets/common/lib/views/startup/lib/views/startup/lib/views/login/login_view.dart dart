import 'package:flutter/material.dart';
import 'package:stacked/stacked.dart';
import 'login_viewmodel.dart';
import '../../ui/widgets/common/glass_button.dart';
import '../../ui/common/ui_helpers.dart';

class LoginView extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return ViewModelBuilder<LoginViewModel>.reactive(
      viewModelBuilder: () => LoginViewModel(),
      builder: (context, model, child) => Scaffold(
        body: SafeArea(
          child: Padding(
            padding: const EdgeInsets.all(16.0),
            child: Column(
              mainAxisAlignment: MainAxisAlignment.center,
              children: [
                Text('Welcome to Dopamind', style: Theme.of(context).textTheme.headline4),
                UiHelpers.verticalSpaceLarge,
                TextField(
                  controller: model.emailController,
                  keyboardType: TextInputType.emailAddress,
                  decoration: InputDecoration(labelText: 'Email'),
                ),
                UiHelpers.verticalSpaceMedium,
                TextField(
                  controller: model.passwordController,
                  obscureText: true,
                  decoration: InputDecoration(labelText: 'Password'),
                ),
                UiHelpers.verticalSpaceMedium,
                if (model.errorMessage.isNotEmpty)
                  Text(model.errorMessage, style: TextStyle(color: Colors.red)),
                UiHelpers.verticalSpaceMedium,
                GlassButton(
                  label: model.isBusy ? 'Loading...' : 'Login',
                  onPressed: model.isBusy ? null : model.loginWithEmail,
                ),
                UiHelpers.verticalSpaceMedium,
                GlassButton(
                  label: 'Sign in with Google',
                  onPressed: model.isBusy ? null : model.loginWithGoogle,
                ),
                UiHelpers.verticalSpaceMedium,
                GlassButton(
                  label: 'Sign in with Apple',
                  onPressed: model.isBusy ? null : model.loginWithApple,
                ),
              ],
            ),
          ),
        ),
      ),
    );
  }
}
